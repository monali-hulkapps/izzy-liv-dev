<div class="section-content" data-section-id="{{ section.id }}" data-type="slider" style="background: {{ section.settings.section_bg_color }}; color: {{ section.settings.section_txt_color }};">
        <div class="{% if section.settings.fluid_layout %}container-fluid{% else %}container{% endif %}">
            <div class="row justify-content-center text-center">
                <div class="col-xl-6 col-lg-7 col-md-8 px-xl-4 mb-5"> 
                    {% if section.settings.heading != '' %}
                        <h2 class="mb-2">{{ section.settings.heading }}</h2>
                    {% endif %}
                    {% if block.settings.txt != '' %}
                        <div>{{ section.settings.txt }}</div>
                    {% endif %}
                </div>
            </div>
    
            {% if section.blocks.size > 0 %}
                <slider-element class="swiper-container carousel">
                    <div class="swiper-slider logo-list" data-slider='{
                        "loop": false,
                        "slidesPerView": 2,
                        "spaceBetween": 30,
                        "grabCursor": true,
                        "navigation": {
                            "nextEl": ".swiper-button-next",
                            "prevEl": ".swiper-button-prev"
                        },
                        "pagination": {
                            "el": ".swiper-pagination"
                        },
                        "breakpoints": {
                          "560": {
                            "slidesPerView": 3,
                            "spaceBetween": 20
                          },
                          "768": {
                            "slidesPerView": 4,
                            "spaceBetween": 30
                          },
                          "992": {
                            "slidesPerView": 5,
                            "spaceBetween": 30
                          },
                          "1200": {
                            "slidesPerView": 6,
                            "spaceBetween": 30
                          }
                        }
                    }'>
                        <div class="swiper-wrapper">
                            {% for block in section.blocks %}
                                <div class="text-center swiper-slide" {{ block.shopify_attributes }} data-block-id="{{ block.id }}"> 
                                    <a {% if block.settings.logo_url %}href="{{ block.settings.logo_url }}"{% endif %} class="logo-list-img"> 
                                        {% if block.settings.logo_img != blank %} 
                                            <img srcset="{{ block.settings.logo_img | img_url: '275x' }}"
                                                sizes="auto" loading="lazy" class="mw-100 lazyload"
                                                src="{{ block.settings.logo_img | img_url: 'pico' }}"
                                                alt="{{ block.settings.logo_img.alt | default: 'Featured In' | escape }}"
                                                width="{{ block.settings.logo_img.width }}"
                                                height="{{ block.settings.logo_img.width | divided_by: block.settings.logo_img.aspect_ratio }}" >
                                        {% else %}
                                            {{ 'image' | placeholder_svg_tag: 'border-gray-300 border bg-gray-100 ' }}
                                        {% endif %} 
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                        {% if section.settings.nav_arrows %}
                            <div class="swiper-button-next"></div>
                            <div class="swiper-button-prev"></div>
                        {% endif %}
                        {% if section.settings.nav_dots %}
                            <div class="swiper-pagination"></div>
                        {% endif %}
                    </div>
                </slider-element>
            {% endif %}
        </div>
    </div>

    {% schema %}
        {
            "name": "Logo List",
            "settings": [
                {
                    "type": "header",
                    "content": "Layout"
                },
                {
                    "type": "checkbox",
                    "id": "fluid_layout",
                    "label": "Full Width Layout?",
                    "default": false
                },
                {
                    "type": "header",
                    "content": "Content"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading Text",
                    "default": "Awesome Heading"
                },
                {
                    "type": "richtext",
                    "id": "txt",
                    "label": "Text",
                    "default": "<p>Awesome Heading</p>"
                },
                {
                    "type": "color",
                    "id": "section_bg_color",
                    "label": "Background Color",
                    "default": "#f8f9fa"
                },
                {
                    "type": "color",
                    "id": "section_txt_color",
                    "label": "Text Color",
                    "default": "#222222"
                },
                {
                    "type": "header",
                    "content": "Carousel Option"
                },
                {
                    "type": "checkbox", 
                    "id": "nav_arrows",
                    "label": "Arrows Navigation",
                    "default": true 
                },
                {
                    "type": "checkbox",
                    "id": "nav_dots",
                    "label": "Dots Navigation",
                    "default": true
                }
            ],
            "presets": [
                {
                    "name": "Logo List",
                    "category": "Content"
                }
            ],
            "blocks": [
                {
                    "type": "content",
                    "name": "Logo Item",
                    "settings": [
                        {
                            "type": "image_picker",
                            "id": "logo_img",
                            "label": "Image"
                        },
                        {
                            "type": "url",
                            "id": "logo_url",
                            "label": "url"
                        }
                    ]
                }
            ]
        }
    {% endschema %}
    
    {% stylesheet %}
        .logo-list .logo-list-img{
            height: 80px;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
        }
        .logo-list .logo-list-img  img{
            max-height: 100%;
        }
    {% endstylesheet %}